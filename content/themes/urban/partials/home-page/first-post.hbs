{{#is "home"}}
   {{#foreach posts}}
      {{#if @first}}
         {{#if feature_image}}
            <div class="container first cover" style="background-image: url({{feature_image}})" itemscope itemtype="http://schema.org/BlogPosting" role="article">
               <article class="post first">
                  <div class="post-wrap">
                     <header class="post-header">
                        {{#foreach tags}}
                           <a class="post-tag" title="{{name}}" href="{{url}}">{{name}}</a>
                        {{/foreach}}
                        <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
                     </header>
                     <p class="post-excerpt">{{excerpt words="26"}}...<a class="post-readmore" href="{{url}}">Read More</a></p>
                     <footer class="post-meta">
                        {{#if author.profile_image}}
                        <figure class="post-meta-avatar">
                           <img class="author-thumb" src="{{author.profile_image}}" alt="{{author.name}}" nopin="nopin" />
                        </figure>
                        {{/if}}
                        <div class="post-meta-summary">
                           {{#author}}
                              <a href="{{url}}">by <strong>{{name}}</strong></a>
                           {{/author}}
                           <div>
                              <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                           </div>
                        </div>
                     </footer>
                  </div>
               </article>
            </div>
         {{else}}
            <div class="container first no-cover" itemscope itemtype="http://schema.org/BlogPosting" role="article">
               <article class="post first">
                  <div class="post-wrap">
                     <header class="post-header">
                           {{#foreach tags}}
                              <a class="post-tag" title="{{name}}" href="{{url}}">{{name}}</a>
                           {{/foreach}}
                           <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
                     </header>
                     <p class="post-excerpt">{{excerpt words="26"}}...<a class="post-readmore" href="{{url}}">Read More</a></p>                   
                     <footer class="post-meta">
                        {{#if author.profile_image}}
                        <figure class="post-meta-avatar">
                           <img class="author-thumb" src="{{author.profile_image}}" alt="{{author.name}}" nopin="nopin" />
                        </figure>
                           {{/if}}
                        <div class="post-meta-summary">
                           {{#author}}
                              <a href="{{url}}">by <strong>{{name}}</strong></a>
                           {{/author}}
                           <div>
                              <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                           </div>
                        </div>
                     </footer>
                  </div>
               </article>
            </div>
         {{/if}}
      {{/if}}
   {{/foreach}}
{{else}}
{{/is}}