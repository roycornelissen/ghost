{{#get "posts" filter="featured:true" limit="3" as |featured|}}
	<div class="widget featured-posts">
		<h6>Featured Posts:</h6>
		<ul>
			{{#foreach featured}}
				<li>
					<a href="{{url}}">{{title}}</a>
					<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
				</li>
			{{/foreach}}
		</ul>
	</div>
{{/get}}