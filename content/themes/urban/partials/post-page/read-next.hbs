<aside class="post post-readNext">
   {{#next_post}}
   <a class="post-readNext-story {{#if feature_image}}" style="background-image: url({{feature_image}}){{else}}no-cover{{/if}}" href="{{url}}">
      <section class="post-readNext-content">
         <h4>{{title}}</h4>
         <p>{{excerpt words="20"}}...</p>
      </section>
   </a>
   {{else}}
   <a class="post-readNext-story no-post"></a> {{/next_post}} {{#prev_post}}
   <a class="post-readNext-story prev {{#if feature_image}}" style="background-image: url({{feature_image}}){{else}}no-cover{{/if}}" href="{{url}}">
      <section class="post-readNext-content">
         <h4>{{title}}</h4>
         <p>{{excerpt words="20"}}...</p>
      </section>
   </a>
   {{else}}
   <a class="post-readNext-story no-post"></a> {{/prev_post}}
</aside>