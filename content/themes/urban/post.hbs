{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<article>
	<div class="container post-cover {{#if feature_image}}cover" style="background-image: url({{feature_image}}){{else}}no-cover{{/if}}">
		<div class="post">
			<div class="post-wrap">
				<header class="post-header">
					{{#foreach tags}}
						<a class="post-tag" title="{{name}}" href="{{url}}">{{name}}</a>
					{{/foreach}}
					<h1 class="post-title">{{title}}</h1>
				</header>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="post">
			<div class="post-content">
				<aside class="post-meta">
					{{#author}}
						{{#if profile_image}}
							<figure class="post-meta-avatar">
								<a class="author-thumb--50" href="{{url}}" style="background-image: url({{profile_image}})"></a>
							</figure>
						{{/if}}
						<div class="post-meta-summary">
							<a href="{{url}}">by <strong>{{name}}</strong></a>
					{{/author}}
							<div>
								<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
							</div>
						</div>
				</aside>

				{{content}}

			</div>
			<footer class="post-content">
				{{#if tags}}
					<div class="post-tags">
						<span>Tags:</span>
							{{#foreach tags}}
								<a class="post-tag" title="{{name}}" href="{{url}}">{{name}}</a>
							{{/foreach}}
					</div>
				{{/if}}
				<div class="post-share">
					<a class="button--share i-twitter-button" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">Tweet it</a>
					<a class="button--share i-facebook-button" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
						onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">Share it</a>
					<a class="button--share i-google-plus-button" href="https://plus.google.com/share?url={{url absolute="true"}}"
					  onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">Share it</a>
				</div>
			</footer>
				
			{{> "post-page/disqus-comments"}}

		</div>

		{{> "post-page/read-next"}}

	</div>
</article>

{{/post}}